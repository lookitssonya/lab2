#include <iostream>
#include <string>
#include <fstream>
using namespace std;

int main() {
    ifstream in("C:\\Users\\Журавлевы\\Desktop\\c.txt"); //открываем первый файл для чтения 
    ofstream out("C:\\Users\\Журавлевы\\Desktop\\c1.txt"); //открываем файл для записи
    char b;
    while (in.get(b)) {
        bool isdelimiter = (b == ' ' || b == '.' || b == ',' || b == ':' || b == ';'); //проверяем, является ли символ разделителем
        if (!isdelimiter) { // если символ не является разделителем, записыва-ем его в выходной файл
            out << b;
        }
    }
    in.close();
    out.close();
    return 0;
}
